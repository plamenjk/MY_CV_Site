@model IEnumerable<MyCvSite.Models.Photo>

@{
    ViewData["Title"] = "Галерия";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Галерия</h2>
        <span class="badge bg-gradient-code">Cars • Life • Vibes</span>
    </div>
    <p class="text-muted mb-4">Малка част от моментите, които ме мотивират – хората до мен, колите и мястото, където се чувствам добре.</p>
    <div class="row g-4">
        @foreach (var photo in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card glass-card h-100 hover-lift">
                    <div class="img-zoom-wrapper">
                        <img src="@photo.ImageUrl" class="card-img-top" alt="@photo.Title" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@photo.Title</h5>
                        <p class="card-text small text-muted">@photo.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
